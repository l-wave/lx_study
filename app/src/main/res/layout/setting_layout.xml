<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/lx_label"
    android:backgroundTint="#FFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textColor="#3F51B5"
        android:layout_gravity="center"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="313dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lx_star">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_label"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="夜晚模式(night)"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />


        <Switch
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="338dp"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_reading_status"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="账号管理"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />
        <ImageView
            android:id="@+id/person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="338dp"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_website"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="个人爱好"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />
        <ImageView
            android:id="@+id/prefer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="338dp"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10.0dip"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="17.0dip"
            android:text="浏览历史"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />
        <ImageView
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/set_ok_back"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:text="Ok" />

    </LinearLayout>

</LinearLayout>