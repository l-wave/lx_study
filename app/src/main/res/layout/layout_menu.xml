<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/lx_label"
    android:layout_width="200dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/MenuTabText"
            android:background="#33aa9900"
            android:drawableLeft="@drawable/ic_bookshelf"
            android:text="Books" />

        <TextView
            style="@style/MenuTabText"
            android:text="Search"
            android:drawableLeft="@drawable/ic_search"/>
        <TextView
            style="@style/MenuTabText"
            android:text="Law"
            android:drawableLeft="@drawable/ic_label"/>
        <TextView
            style="@style/MenuTabText"
            android:text="Create news label"
            android:drawableLeft="@drawable/ic_reading_status" />
        <TextView
            style="@style/MenuTabText"
            android:id="@+id/set_button"
            android:text="Settings"
            android:drawableLeft="@drawable/ic_settings"/>
        <TextView
            style="@style/MenuTabText"
            android:id="@+id/About_button"
            android:text="Abouts"
            android:drawableLeft="@drawable/ic_notes"/>
    </LinearLayout>
</ScrollView>